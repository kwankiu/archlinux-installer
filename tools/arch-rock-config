# Manage Packages Main Menu
manage_packages() {
    title "Arch Rock Configuration Utility - Manage Packages"
    options=("Install / Update Packages - Install Basic Software / RK3588 Specified / Customized Packages")
    options+=("Downgrade Packages - Install / Downgrade any Arch Linux Packages from Archive")
    options+=("Return to Main Menu")
    select_option "${options[@]}"
    choice=$?

    # Choice
    case $choice in
        0)
            install_packages
            ;;
        1)
            downgrade_packages
            ;;
        *)
            config_options
            ;;
    esac

}

# Install Packages
install_packages() {

    title "Arch Rock Configuration Utility - Install / Update Software"

    if [ "$1" = "--select" ]; then
        local selected_option="${poptions[$2]}"

        if [[ " ${selection[*]} " == *" $selected_option "* ]]; then
            options[$2]="[ ] ${selected_option}"
            selection=("${selection[@]/$selected_option}")
        else
            options[$2]="[x] ${selected_option}"
            selection+=("$selected_option")
        fi
    elif [ "$1" = "--category" ]; then
        software_web=("firefox" "chromium" "ssh" "nodejs")
        software_comm=()
        software_suites=()
        software_gaming=()
        software_devtools=()
        software_misc=("intel-ax210-fw" "pip")
        #software_de=("gnome" "plasma" "budgie" "sway") 
        #software_description=()
            
        for ((i=0; i<${#update_list[@]}; i++)); do
            options+=("[ ] ${update_list[i]}")
            poptions+=("${update_list[i]}")
        done
    else
        selection=()
        category=("Web - Surf the Internet" "Communication - Connect with friends, family, teams" "Suites - Office & Productivity Software" "Multimedia - Audio, Video, Graphics Software" "Gaming / Emulation / Virtualization Software" "Development Tools - Editors, IDEs, Build Tools" "Misc - Firmware Driver, other Tools and Software")
        current_tree=()
        options=("Return to Main Menu" "Install Selected Software")
        options+=("$GREEN----------------------------------------------------" "$GREEN Install / Update Software (Press enter to select/deselect): " "$GREEN----------------------------------------------------$YELLOW" "Minimize All Category / Clear Selection $GREEN")
        options+=("${category[@]}$NC")
        poptions=("${options[@]}")
    fi

    select_option "${options[@]}"
    choice=$?

    if [ "$choice" = "0" ]; then
        config_options
    elif [ "$choice" = "1" ]; then
        if [ -x "$(command -v yay)" ]; then
            yay -S ${selection[*]}
        else
            sudo pacman -S ${selection[*]}
        fi
    elif [ "$choice" = "2" ] || [ "$choice" = "3" ] || [ "$choice" = "4" ] || [ "$choice" = "5" ]; then
        install_packages
    else
        install_packages --select $choice
    fi

}

